#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

bundle install

version="2.4.5"
curl "http://www.pjsip.org/release/${version}/pjproject-${version}.tar.bz2" -o "pjproject-${version}.tar.bz2"
tar -xjf pjproject-${version}.tar.bz2
rm pjproject-${version}.tar.bz2

cd pjproject-${version}
./configure
make dep && make && make install
cp pjsip-apps/bin/samples/x86_64-apple-darwin*/auddemo /usr/local/bin/audtool
cp pjsip-apps/bin/pjsua* /usr/local/bin/pjsua

rm -rf pjproject-${version}{,.tar.bz2}
